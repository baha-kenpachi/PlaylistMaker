    <LinearLayout
        android:id="@+id/button_share_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_box_in_menu_61dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_support_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switcher_dark_theme_layout">

        <TextView
            android:id="@+id/title_share_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sight_padding_16dp"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/share_app"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_in_menu_16sp" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="@dimen/square_button_48dp"
            android:layout_height="@dimen/square_button_48dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@drawable/share" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_support_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_box_in_menu_61dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_arrow_forward_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_share_layout">

        <TextView
            android:id="@+id/title_contact_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sight_padding_16dp"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/contact_support"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_in_menu_16sp" />

        <ImageButton
            android:id="@+id/button_support"
            android:layout_width="@dimen/square_button_48dp"
            android:layout_height="@dimen/square_button_48dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@drawable/support" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_arrow_forward_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_box_in_menu_61dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf=""
        app:layout_constraintEnd_toEndOf="parent"
