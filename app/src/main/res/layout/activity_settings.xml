            android:layout_width="@dimen/square_button_48dp"
            android:layout_height="@dimen/square_button_48dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@drawable/arrow_forward"
            app:tint="@color/grey_for_button_nonactive" />
    </LinearLayout>


    <TextView
        android:id="@+id/title_terms_of_use1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_box_in_menu_61dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/sight_padding_16dp"
        android:layout_weight="1"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/terms_of_use"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_in_menu_16sp"
        app:layout_constraintBottom_toTopOf=""
        app:layout_constraintEnd_toStartOf="@id/button_arrow_forward1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_arrow_forward_layout"/>

