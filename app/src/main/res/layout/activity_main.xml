<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/sight_padding">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_space"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/find_button"
            />


        <!--android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sight_padding"
        android:orientation="vertical">-->

        <Button
            android:id="@+id/find_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/sight_margin_for_button_in_main_activity"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_medium"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/find"
            android:textAllCaps="false"
            android:textColor="@color/black_text"
            android:textSize="@dimen/primary_text_size"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/find_vector"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/media_library_button"/>

        <Button
            android:id="@+id/media_library_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sight_margin_for_button_in_main_activity"
            android:layout_marginBottom="@dimen/sight_margin_for_button_in_main_activity"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_medium"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/media_library"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black_text"
            android:textSize="22sp"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/media_vector"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/find_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/setting_button"/>

        <Button
            android:id="@+id/setting_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sight_margin_for_button_in_main_activity"
            android:layout_marginBottom="28dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_medium"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/settings_name"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black_text"
            android:textSize="@dimen/primary_text_size"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/setting_vector"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/media_library_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
