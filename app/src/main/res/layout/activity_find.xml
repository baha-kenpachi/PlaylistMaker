<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_space_56dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            style="@style/ButtonsInSettingsActivityStyle"
            android:layout_height="@dimen/top_menu_space_56dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/vector"
            app:tint="?attr/colorOnSecondary" />


        <TextView
            android:id="@+id/title_settings"
            style="@style/TextMainTitleScreenStyle"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/find" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="@dimen/sight_padding_16dp"
        android:background="@drawable/edittext_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:src="@drawable/vector_mini"

            />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="@string/find"
            android:maxLines="1"
            android:inputType="text"
            android:paddingStart="9dp"
            android:paddingEnd="36dp"
            android:textColor="@color/yp_black"
            android:textColorHint="?attr/colorSecondary"
            android:textSize="@dimen/text_in_menu_16sp"
            android:textCursorDrawable="@drawable/cursor_color"
            />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
